<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="280dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#080809"
        android:backgroundTint="#090808"
        android:paddingRight="20dp">

        <LinearLayout
            android:layout_width="165dp"
            android:layout_height="210dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/Imgpeli"
                android:layout_width="198dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:srcCompat="@tools:sample/backgrounds/scenic[0]" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="243dp"
            android:layout_height="210dp"
            android:layout_marginLeft="165dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTitulo"
                android:layout_width="201dp"
                android:layout_height="3dp"
                android:layout_weight="1"
                android:text="TextView"
                android:textColor="#00838F"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDescripcion"
                android:layout_width="186dp"
                android:layout_height="103dp"
                android:layout_weight="1"
                android:text="TextView"
                android:textColor="@color/common_google_signin_btn_text_dark_default" />

            <TextView
                android:id="@+id/txtTematica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textColor="@color/common_google_signin_btn_text_dark_default" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="210dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/BtnCardCompra"
                android:layout_width="15dp"
                android:layout_height="32dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="30dp"
                android:layout_weight="1"
                android:background="@drawable/botonredondo"
                android:text="@string/BtnCardCompra"
                android:textColor="#88050505"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/BtnCardTrailer"
                android:layout_width="6dp"
                android:layout_height="32dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:background="@drawable/botonredondo"
                android:text="@string/BtnCardTrailer"
                android:textColor="#880C0C0C"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtEnlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/txtid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:visibility="invisible" />

    </androidx.cardview.widget.CardView>

</LinearLayout>